{
  "tabBar": {
		"custom": true,
		"color": "#000000",
		"selectedColor": "#000000",
		"backgroundColor": "#000000",
		"list": [
			{
				"pagePath": "pages/space/space"
			},
			{
				"pagePath": "pages/thing/thing"
			},
			{
				"pagePath": "pages/remind/remind"
			},
			{
				"pagePath": "pages/mine/mine"
			}
		]
  },
  
  "pages": [
    "pages/space/space",
    "pages/main-space/area/area",
    "pages/main-space/detail/detail",
    "pages/thing/thing",
    "pages/remind/remind",
    "pages/mine/mine"
  ],

  "subpackages": [
    {
      "root": "pages/sub-space",
      "name": "SPACE",
      "pages": [
        "index/index"
      ]
    },
    {
      "root": "pages/sub-thing",
      "name": "THING",
      "pages": [
        "index/index"
      ]
    },
    {
      "root": "pages/sub-remind",
      "name": "REMIND",
      "pages": [
        "index/index"
      ]
    },
    {
      "root": "pages/sub-mine",
      "name": "MINE",
      "pages": [
        "index/index"
      ]
    }
  ],
  "preloadRule": {
    "pages/space/space": {
      "network": "all",
      "packages": ["SPACE"]
    },
    "pages/thing/thing": {
      "network": "all",
      "packages": ["THING"]
    },
    "pages/remind/remind": {
      "network": "all",
      "packages": ["REMIND"]
    },
    "pages/mine/mine": {
      "network": "all",
      "packages": ["MINE"]
    }
  },

  "usingComponents": {
    "van-button": "@vant/weapp/button/index",
    "van-cell": "@vant/weapp/cell/index",
    "van-cell-group": "@vant/weapp/cell-group/index",
    "van-icon": "@vant/weapp/icon/index",
    "van-image": "@vant/weapp/image/index",
    "van-row": "@vant/weapp/row/index",
    "van-col": "@vant/weapp/col/index",
    "van-transition": "@vant/weapp/transition/index"
  },

  "resizable": true,

  "window": {
    "backgroundColor": "#F6F6F6",
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#F6F6F6",
    "navigationBarTitleText": "贝之家",
    "navigationBarTextStyle": "black"
  },
  
  "lazyCodeLoading": "requiredComponents",

  "sitemapLocation": "sitemap.json"
}